{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier": {
            "singleQuote": true
        },
        "no-restricted-globals": ["error", "event", "fdescribe"],
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    }
}
